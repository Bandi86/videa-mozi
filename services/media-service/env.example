# Media Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3006

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/videa_mozi_media

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Upload Configuration
UPLOAD_PATH=./uploads
TEMP_PATH=./uploads/temp
PROCESSED_PATH=./uploads/processed
THUMBNAIL_PATH=./uploads/thumbnails

# File Size Limits (in bytes)
MAX_FILE_SIZE=104857600
MAX_IMAGE_SIZE=52428800
MAX_VIDEO_SIZE=1073741824

# Image Processing
IMAGE_PROCESSING_ENABLED=true
IMAGE_QUALITY=85
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
PROFILE_IMAGE_WIDTH=400
PROFILE_IMAGE_HEIGHT=400

# Video Processing
VIDEO_PROCESSING_ENABLED=true
VIDEO_COMPRESSION_ENABLED=true
VIDEO_MAX_DURATION=3600

# Cloud Storage (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=videa-mozi-media

# CDN Configuration
CLOUDFRONT_DISTRIBUTION_ID=
CLOUDFRONT_INVALIDATION_ENABLED=true

# Security Configuration
FILE_TYPE_VALIDATION_ENABLED=true
VIRUS_SCANNING_ENABLED=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=50

# Logging Configuration
LOG_LEVEL=info

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
