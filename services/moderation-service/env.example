# Moderation Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3005

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/videa_mozi_moderation

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Service URLs
USER_SERVICE_URL=http://localhost:3002
SOCIAL_SERVICE_URL=http://localhost:3004
CONTENT_SERVICE_URL=http://localhost:3003

# Moderation Configuration
AUTO_MODERATION_ENABLED=true
MODERATION_QUEUE_SIZE=1000
REPORT_RETENTION_DAYS=365
APPEAL_WINDOW_DAYS=30

# Content Moderation
SUSPICIOUS_WORD_THRESHOLD=3
AUTO_FLAG_SCORE_THRESHOLD=0.7
CONTENT_SCAN_ENABLED=true

# User Moderation
TRUST_SCORE_DECAY_RATE=0.01
WARNING_EXPIRY_DAYS=30
SUSPENSION_CHECK_INTERVAL=3600000

# Notification Configuration
MODERATOR_NOTIFICATION_ENABLED=true
AUTO_ESCALATION_ENABLED=true
ESCALATION_THRESHOLD=10

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
