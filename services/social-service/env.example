# Social Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3004

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/videa_mozi_social

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Service URLs
USER_SERVICE_URL=http://localhost:3002
CONTENT_SERVICE_URL=http://localhost:3003
MODERATION_SERVICE_URL=http://localhost:3005

# Social Features Configuration
MAX_POSTS_PER_PAGE=20
MAX_COMMENTS_PER_PAGE=50
MAX_LIKES_PER_PAGE=100
MAX_FOLLOWERS_PER_PAGE=50
MAX_NOTIFICATIONS_PER_PAGE=30

# Content Limits
MAX_POST_LENGTH=5000
MAX_COMMENT_LENGTH=1000
MAX_BIO_LENGTH=500

# Image Configuration
MAX_POST_IMAGES=4
MAX_COMMENT_IMAGES=2
POST_IMAGE_MAX_WIDTH=1920
POST_IMAGE_MAX_HEIGHT=1080

# Activity Feed Configuration
ACTIVITY_FEED_SIZE=100
ACTIVITY_RETENTION_DAYS=90

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=300

# Logging Configuration
LOG_LEVEL=info

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
