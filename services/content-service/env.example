# Content Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/videa_mozi_content

# Redis Configuration
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Service URLs
USER_SERVICE_URL=http://localhost:3002
SOCIAL_SERVICE_URL=http://localhost:3004

# Content Configuration
MAX_CONTENT_PER_PAGE=50
FEATURED_CONTENT_LIMIT=10
TRENDING_CONTENT_LIMIT=20
DEFAULT_LANGUAGE=en
DEFAULT_COUNTRY=US

# Image Configuration
POSTER_IMAGE_WIDTH=500
POSTER_IMAGE_HEIGHT=750
BACKDROP_IMAGE_WIDTH=1920
BACKDROP_IMAGE_HEIGHT=1080
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=450

# Video Configuration
MAX_VIDEO_SIZE=1073741824
ALLOWED_VIDEO_TYPES=video/mp4,video/webm,video/ogg
VIDEO_PROCESSING_ENABLED=true

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=200

# Logging Configuration
LOG_LEVEL=info

# RabbitMQ Configuration
RABBITMQ_URL=amqp://admin:password@localhost:5672

# Monitoring Configuration
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
